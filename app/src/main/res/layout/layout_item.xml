<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="@dimen/dp_335"
        android:layout_height="445dp"
        android:id="@+id/img"
        android:src="@mipmap/zhanweitu_xianlu_qipao_small"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_10"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/c_60ffffff"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_37"
        android:textColor="@color/c_373737"

        android:text="银座"
        android:layout_marginTop="@dimen/dp_27"
        android:layout_marginLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_26"
        android:id="@+id/ginza"/>
    <TextView
        android:layout_width="@dimen/dp_132"
        android:layout_height="@dimen/dp_25"
        android:layout_below="@id/ginza"
        android:text="疯狂购物买买买"
        android:textSize="@dimen/sp_18"
        android:layout_marginBottom="@dimen/dp_27"
        android:textColor="@color/c_636363"
        android:layout_alignLeft="@id/ginza"
        android:id="@+id/shop"/>
    <ImageView
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_12"
        android:layout_toRightOf="@id/ginza"
        android:layout_above="@id/shop"
        android:layout_marginBottom="@dimen/dp_9"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_12"
        android:src="@mipmap/icon_gcoding"
        android:id="@+id/img_location"/>
    <TextView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_20"
        android:textColor="@color/c_999999"
        android:layout_toRightOf="@id/img_location"
        android:layout_above="@id/shop"
        android:layout_marginBottom="@dimen/dp_9"
        android:textSize="@dimen/sp_14"
        android:text="京东"
        android:id="@+id/jd"/>
    <Button
        android:layout_width="@dimen/dp_74"
        android:layout_height="@dimen/dp_29"
        android:id="@+id/btn_price"
        android:background="@drawable/shape_iv"
        android:text="¥28.00"

        android:layout_alignParentRight="true"
        android:textColor="@color/c_ffffff"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_34"/>
    <TextView
        android:layout_width="@dimen/dp_61"
        android:layout_height="@dimen/dp_17"
        android:text="530人购买"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_below="@id/btn_price"
        android:layout_alignRight="@id/btn_price"
        android:layout_marginRight="@dimen/dp_17"
        android:layout_marginLeft="@dimen/dp_290"
        android:id="@+id/tv_price"/>
    </RelativeLayout>
</RelativeLayout>
