<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".trip.ui.main.activity.WebActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_999999"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_13"
        android:id="@+id/tv_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_373737"
        android:textSize="@dimen/sp_26"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_below="@id/tv_title"
        android:id="@+id/tv_ginza"/>
        <ImageView
            android:id="@+id/x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_ginza"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@drawable/x"
            android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_373737"
        android:textSize="@dimen/sp_18"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_below="@id/tv_ginza"
        android:id="@+id/tv_shop"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_383"
        android:id="@+id/img"
        android:scaleType="centerCrop"
        android:layout_below="@id/tv_shop"
        android:layout_marginTop="@dimen/dp_14"/>
    <ImageView
        android:id="@+id/img_title"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_52"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_below="@id/img"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_title"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@id/img"
        android:layout_marginTop="@dimen/dp_26"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/c_373737"
        android:id="@+id/tv_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_12"
        android:id="@+id/tv_city"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_title"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@id/tv_name"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/c_636363"
        android:id="@+id/tv_occupation"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_below="@id/tv_occupation"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/c_636363"
        android:id="@+id/tv_message"/>
    <ImageView
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_38"
        android:layout_below="@id/tv_message"
        android:id="@+id/img_user1"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_user1"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_373737"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/tv_user1"
            android:layout_alignTop="@id/img_user1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_user1"
            android:layout_below="@+id/tv_user1"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_636363"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/tv_date1"
            />
        <TextView
            android:textColor="@color/c_636363"
            android:textSize="@dimen/sp_14"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_67"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_13"
            android:id="@+id/tv_message1"
            android:layout_below="@id/tv_date1"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_below="@id/tv_message1"
            android:layout_marginTop="@dimen/dp_21"
            android:background="@color/c_dcdcdc"
            android:layout_marginLeft="@dimen/dp_58"/>

        <ImageView
            android:id="@+id/img_title2"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
           android:layout_alignTop="@id/tv_user2"
            android:layout_alignStart="@+id/img_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_title2"
            android:layout_below="@id/view1"
            android:textColor="@color/c_373737"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_11"

            android:id="@+id/tv_user2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_date2"
            android:layout_below="@id/tv_user2"
            android:layout_toRightOf="@id/img_title2"
            android:layout_marginLeft="@dimen/dp_11"

            android:textSize="@dimen/dp_10"/>
        <LinearLayout
            android:id="@+id/ll"
            android:layout_below="@+id/tv_date2"
            android:layout_marginLeft="@dimen/dp_67"
            android:layout_marginTop="@dimen/dp_48"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img1"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                />
            <ImageView
                android:id="@+id/img2"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_marginLeft="@dimen/dp_5"
               />
            <ImageView
                android:id="@+id/img3"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_marginLeft="@dimen/dp_5"
                />
            <ImageView
                android:id="@+id/img4"
                android:layout_width="@dimen/dp_80"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_height="@dimen/dp_80"
                />
        </LinearLayout>
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_below="@id/ll"
            android:layout_marginTop="@dimen/dp_21"
            android:background="@color/c_dcdcdc"
            android:layout_marginLeft="@dimen/dp_58"/>
        <ImageView
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_below="@id/img_title2"
            android:layout_marginTop="@dimen/dp_164"

            android:layout_alignLeft="@id/img_title2"
            android:id="@+id/img_title3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_user3"

            android:textColor="@color/c_373737"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/img_title3"
            android:layout_alignTop="@id/img_title3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_date3"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/c_999999"
            android:layout_below="@id/tv_user3"
            android:layout_toRightOf="@+id/img_title3"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="@string/guanzhu"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_message2"
            android:layout_below="@id/tv_date3"
            android:layout_alignLeft="@id/tv_date3"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            />
        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_below="@id/tv_message2"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/c_dcdcdc"
            android:layout_marginLeft="@dimen/dp_58"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_comment"
            android:textColor="@color/c_999999"
            android:layout_below="@id/view3"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerHorizontal="true"
            android:text="@string/pinglun"/>
        <LinearLayout
            android:id="@+id/share"
            android:layout_width="@dimen/dp_87"
            android:layout_height="@dimen/dp_28"
            android:layout_below="@+id/tv_comment"
            android:background="@drawable/bg_eaeaea_r6"
            android:layout_marginTop="@dimen/dp_33"
            android:layout_marginLeft="@dimen/dp_71">
            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_19"
                android:src="@drawable/share_button"
                android:id="@+id/iv"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_3"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_636363"
                android:text="分享"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/aa"
            android:layout_width="@dimen/dp_87"
            android:layout_height="@dimen/dp_28"
            android:layout_below="@+id/tv_comment"
            android:background="@drawable/bg_eaeaea_r6"
            android:layout_marginLeft="@dimen/dp_218"
            android:layout_marginTop="@dimen/dp_33">
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_12"
                android:src="@drawable/collect_default"
                android:id="@+id/img_colltion"
                />
            <TextView
                android:id="@+id/colltion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_3"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_636363"
                android:text="未收藏"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@color/c_ffffff"
            android:layout_below="@+id/aa">
        <Button

            android:layout_width="@dimen/dp_112"
            android:layout_height="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginLeft="@dimen/dp_51"
            android:text="预览线程"
            android:background="@drawable/button_preview"
            android:id="@+id/btn_start"/>
            <Button
                android:layout_marginTop="@dimen/dp_11"
                android:layout_width="@dimen/dp_112"
                android:layout_height="@dimen/dp_38"
                android:layout_marginLeft="@dimen/dp_50"
                android:background="@drawable/button_pay_particulars"
                android:text="¥30.00"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>