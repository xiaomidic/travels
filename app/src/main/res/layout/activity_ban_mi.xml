<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".trip.ui.main.activity.BanMiActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@color/c_ffffff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">
            <ImageView
                android:id="@+id/img_fanhui"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@drawable/back_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:text="伴米详情"
                android:textColor="@color/c_333333"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:id="@+id/img_fenxiang"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_gravity="right"
                android:src="@mipmap/share"
                />
        </android.support.v7.widget.Toolbar>
            <android.support.v7.widget.CardView
                android:layout_below="@id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_300"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/dp_6"
                android:id="@+id/card"
                app:cardElevation="@dimen/dp_1"
                android:layout_margin="@dimen/dp_15">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_300">
                <ImageView
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_160"
                    android:layout_margin="@dimen/dp_15"
                    android:id="@+id/img" />
                    <TextView
                        android:text="@string/guanzhu"
                        android:layout_toRightOf="@id/img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_22"
                        android:textColor="@color/c_333333"
                        android:layout_marginTop="@dimen/dp_15"
                        android:id="@+id/tv_name"/>
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_18"
                        android:src="@mipmap/follow"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_19"
                        android:layout_alignTop="@+id/tv_name"
                        android:layout_marginTop="@dimen/dp_10"
                        android:id="@+id/img_love"/>
                    <TextView
                        android:text="已关注"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/img"
                        android:layout_below="@id/tv_name"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/c_999999"
                        android:id="@+id/tv_gz_num"/>
                    <TextView
                        android:text="已关注"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_45"
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/c_999999"
                        android:layout_alignParentRight="true"
                        android:id="@+id/tv_concern"/>
                    <ImageView
                        android:id="@+id/img_city"
                        android:layout_width="@dimen/dp_10"
                        android:src="@mipmap/location"
                        android:layout_toRightOf="@id/img"
                        android:layout_below="@id/tv_gz_num"
                        android:layout_marginTop="@dimen/dp_75"
                        android:layout_height="@dimen/dp_12" />
                    <TextView
                        android:text="@string/guanzhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/img_city"
                        android:layout_below="@id/tv_gz_num"
                        android:layout_marginTop="@dimen/dp_73"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/c_999999"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:id="@+id/tv_city"/>
                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_12"
                        android:id="@+id/img_toponymy"
                        android:src="@mipmap/location"
                        android:layout_marginTop="@dimen/dp_7"
                        android:layout_below="@id/img_city"
                        android:layout_toRightOf="@+id/img"/>
                    <TextView
                        android:text="@string/guanzhu"
                        android:layout_width="wrap_content"
                        android:textColor="@color/c_999999"
                        android:layout_toRightOf="@id/img_toponymy"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:layout_below="@+id/tv_city"
                        android:textSize="@dimen/sp_12"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_toponymy"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_88"
                        android:layout_below="@+id/img"
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/sp_14"
                        android:maxLines="4"
                        android:ellipsize="end"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_22"
                        android:id="@+id/tv_message"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.design.widget.TabLayout
                android:layout_width="match_parent"
                app:tabIndicatorHeight="@dimen/dp_0"
                android:layout_height="wrap_content"
                app:tabMode="fixed"
                android:layout_below="@+id/card"
                app:tabGravity="center"
                android:id="@+id/tab"/>

        <FrameLayout
            android:id="@+id/vp"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>