<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_marginLeft="@dimen/dp_21"
        android:id="@+id/img"/>
    <TextView
        android:textSize="14sp"
        android:layout_toRightOf="@id/img"
        android:layout_marginTop="@dimen/dp_28"
        android:text="@string/guanzhu"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/c_373737"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_10"
        android:layout_toRightOf="@id/img"
        android:layout_marginLeft="@dimen/dp_9"
        android:text="@string/guanzhu"
        android:layout_below="@id/tv_name"
        android:textColor="@color/c_999999"
        android:id="@+id/tv_date"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_praise"
        android:layout_marginTop="@dimen/dp_39"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_21"
        android:src="@mipmap/praise_unselected"/>

        <ImageView
            android:id="@+id/img_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_55"
            android:layout_marginTop="@dimen/dp_41"
            android:layout_toLeftOf="@id/img_praise"
            android:src="@mipmap/comment"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_below="@id/tv_date"
        android:text="@string/guanzhu"
        android:textColor="@color/c_636363"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_68"
        android:id="@+id/tv_message"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_58"
        android:layout_marginRight="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_below="@id/tv_message"
        android:background="@color/c_dcdcdc"
        />
</RelativeLayout>