<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/dian2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@color/c_fa6a13"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_4"
                />

            <TextView
                android:layout_marginTop="@dimen/dp_15"
                android:id="@+id/five"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_18"
                android:text="5小时前"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/dian2"
                />

            <View
                android:id="@+id/xian2"
                android:layout_width="2dp"
                android:layout_height="330dp"
                android:background="@color/c_fa6a13"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_below="@id/dian2"
                android:layout_marginTop="@dimen/dp_2"
                />

            <TextView
                android:id="@+id/dynamic"
                android:layout_width="98dp"
                android:layout_height="20dp"
                android:text="上传了一条动态"
                android:textColor="@color/c_333333"
                android:textSize="14dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_below="@id/five"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@id/xian2"
                />
            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/xian2"
                android:layout_below="@id/dynamic"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/cv2"
                    android:layout_width="@dimen/dp_320"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/c_FFFFFF"
                    android:layout_marginLeft="@dimen/dp_10"
                    >
                    <TextView
                        android:id="@+id/titlt2"
                        android:layout_width="84dp"
                        android:layout_height="22dp"
                        android:text="这里是标题"
                        android:textColor="@color/c_373737"
                        android:textSize="16dp"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        />

                    <TextView
                        android:id="@+id/aaa2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_40"
                        />

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/big_img2"
                        android:layout_width="@dimen/dp_300"
                        android:layout_height="@dimen/dp_131"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_110"
                        />

                    <TextView
                        android:id="@+id/six2"
                        android:layout_width="@dimen/dp_17"
                        android:layout_height="@dimen/dp_20"
                        android:text="66"
                        android:layout_below="@id/big_img2"
                        android:layout_marginTop="@dimen/dp_248"
                        android:layout_marginLeft="@dimen/dp_200"
                        />
                    <ImageView
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_13"
                        android:background="@mipmap/comment"
                        android:layout_toRightOf="@id/six2"
                        android:layout_below="@id/big_img2"
                        android:layout_marginTop="@dimen/dp_250"
                        android:layout_marginLeft="@dimen/dp_230"
                        />

                    <TextView
                        android:id="@+id/two2"
                        android:layout_width="@dimen/dp_17"
                        android:layout_height="@dimen/dp_20"
                        android:text="2"
                        android:layout_below="@id/big_img2"
                        android:layout_marginTop="@dimen/dp_248"
                        android:layout_marginLeft="@dimen/dp_260"
                        />

                    <ImageView
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_13"
                        android:background="@mipmap/praise"
                        android:layout_below="@id/qq"
                        android:layout_marginLeft="@dimen/dp_290"
                        android:layout_marginTop="@dimen/dp_250"
                        />

                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>




</ScrollView>